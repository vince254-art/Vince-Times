  </div>

  <!-- Overlay -->
  <div id="menuOverlay" class="menu-overlay"></div>

  <!-- Slide Panel -->
  <div id="mobileMenu" class="mobile-menu">
    <button id="closeMenu" class="close-button" aria-label="Close menu">√ó</button>

