<style>
  :root {
    --bg-light: #fff;
    --bg-dark: #1e293b;
    --text-light: #1e293b;
    --text-dark: #f3f4f6;
  }

  .navbar {
    background: var(--bg-light);
    color: var(--text-light);
    box-shadow: 0 1px 4px rgba(0,0,0,0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .dark .navbar {
    background: var(--bg-dark);
    color: var(--text-dark);
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .branding {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .navbar-logo {
    font-size: 1.8rem;
    font-weight: bold;
    text-decoration: none;
    color: inherit;
  }

  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .home-button {
    text-decoration: none;
    font-weight: 500;
    color: inherit;
    padding: 0.3rem 0.75rem;
    border-radius: 6px;
    background: rgba(0, 0, 0, 0.05);
  }

  .dark .home-button {
    background: rgba(255, 255, 255, 0.1);
  }

  .hamburger {
    display: inline-block;
    width: 26px;
    height: 22px;
    position: relative;
    border: none;
    background: none;
    cursor: pointer;
  }

  .hamburger .bar {
    display: block;
    height: 3px;
    background: currentColor;
    border-radius: 2px;
    position: absolute;
    width: 100%;
    left: 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .hamburger .top { top: 0; }
  .hamburger .middle { top: 9px; }
  .hamburger .bottom { bottom: 0; }

  .hamburger.open .top {
    transform: rotate(45deg) translate(4px, 4px);
  }

  .hamburger.open .middle {
    opacity: 0;
  }

  .hamburger.open .bottom {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  .menu-overlay {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    z-index: 98;
  }

  .menu-overlay.active {
    display: block;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    right: -320px;
    width: 280px;
    height: 100%;
    background: var(--bg-light);
    color: var(--text-light);
    box-shadow: -2px 0 6px rgba(0,0,0,0.1);
    overflow-y: auto;
    transition: right 0.3s ease, visibility 0.3s ease;
    padding: 2rem 1.5rem 1.5rem;
    z-index: 99;
    visibility: hidden;
  }

  .dark .mobile-menu {
    background: var(--bg-dark);
    color: var(--text-dark);
  }

  .mobile-menu.show {
    right: 0;
    visibility: visible;
  }

  .mobile-menu a,
  .mobile-menu button {
    display: block;
    padding: 0.75rem 0;
    text-decoration: none;
    color: inherit;
    font-weight: 500;
    border: none;
    background: none;
    width: 100%;
    text-align: left;
    cursor: pointer;
  }

  .mobile-menu .logout { color: red; }
  .mobile-menu .login { color: #2563eb; }

  .close-button {
    font-size: 1.5rem;
    position: absolute;
    top: 0.8rem;
    right: 1rem;
    background: none;
    border: none;
    cursor: pointer;
    color: inherit;
  }

  .logo {
    height: 60px;
    width: auto;
    margin: 10px 0;
    border-radius: 8px;
  }

  @media (max-width: 600px) {
    .logo {
      height: 40px;
    }
  }

  @media (max-width: 768px) {
    .home-button { font-size: 0.9rem; }
  }

  body.menu-open {
    overflow: hidden;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const burger = document.getElementById("hamburger");
    const mobileMenu = document.getElementById("mobileMenu");
    const overlay = document.getElementById("menuOverlay");
    const closeBtn = document.getElementById("closeMenu");
    const darkToggleMobile = document.getElementById("darkToggleMobile");

    function toggleMenu(show) {
      mobileMenu.classList.toggle("show", show);
      overlay.classList.toggle("active", show);
      burger.classList.toggle("open", show);
      document.body.classList.toggle("menu-open", show);
      burger.setAttribute("aria-expanded", show);
    }

    burger?.addEventListener("click", (e) => {
      e.stopPropagation();
      toggleMenu(!burger.classList.contains("open"));
    });

    closeBtn?.addEventListener("click", () => toggleMenu(false));
    overlay?.addEventListener("click", () => toggleMenu(false));

    document.addEventListener("click", (e) => {
      if (!mobileMenu.contains(e.target) && !burger.contains(e.target)) {
        toggleMenu(false);
      }
    });

    mobileMenu.querySelectorAll("a, button").forEach(el => {
      el.addEventListener("click", () => toggleMenu(false));
    });

    function toggleDarkMode() {
      document.documentElement.classList.toggle("dark");
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
      if (darkToggleMobile) darkToggleMobile.textContent = isDark ? "‚òÄÔ∏è" : "üåô";
    }

    darkToggleMobile?.addEventListener("click", toggleDarkMode);

    // Init dark mode
    if (localStorage.getItem("theme") === "dark") {
      document.documentElement.classList.add("dark");
    }

    const isDark = document.documentElement.classList.contains("dark");
    if (darkToggleMobile) darkToggleMobile.textContent = isDark ? "‚òÄÔ∏è" : "üåô";
  });
</script>