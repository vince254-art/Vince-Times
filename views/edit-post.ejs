<%- include('partials/head') %>
<body>
  <%- include('partials/navbar') %>

  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">‚úèÔ∏è Edit Post</h1>

    <form action="/admin/edit/<%= post.id %>" method="POST" enctype="multipart/form-data"
      class="bg-white dark:bg-gray-800 p-6 rounded shadow space-y-6">

      <!-- Title -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200">Title</label>
        <input type="text" name="title" value="<%= post.title %>" required
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white" />
      </div>

      <!-- Author -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200" for="author">Author</label>
        <input type="text" id="author" name="author" value="<%= post.author || '' %>" placeholder="Author name"
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white" />
      </div>

      <!-- Category Dropdown -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200">Category</label>
        <select name="category" required
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white">
          <% const categories = ['Technology', 'Lifestyle', 'Business', 'Entertainment', 'Sports', 'Politics', 'Opinions', 'News']; %>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>" <%= post.category === cat ? 'selected' : '' %>><%= cat %></option>
          <% }) %>
        </select>
      </div>

      <!-- YouTube URL -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200">YouTube Video URL (optional)</label>
        <input type="url" name="videoUrl" value="<%= post.videoUrl || '' %>"
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white" />
      </div>

      <!-- Rich Text Editor -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200">Post Content</label>
        <div id="editor" class="bg-white dark:bg-gray-900 dark:text-white p-2 border rounded min-h-[200px]"></div>
        <textarea name="content" id="content" hidden></textarea>
      </div>

      <!-- Existing Image Preview -->
      <% if (post.media) { %>
        <figure>
          <img src="<%= post.media %>" alt="Post Image"
            class="w-full h-auto max-h-64 object-contain rounded border" />
          <% if (post.photoCredit) { %>
            <figcaption class="text-sm text-gray-500 dark:text-gray-400 mt-1">
              üì∏ <%= post.photoCredit %>
            </figcaption>
          <% } %>
        </figure>
      <% } %>

      <!-- Optional Media Upload -->
      <div>
        <label class="block font-medium mb-1 text-gray-800 dark:text-gray-200">Replace Media (optional)</label>
        <input type="file" name="media"
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white" />
      </div>

      <!-- Photo Credit -->
      <div>
        <label for="photoCredit" class="block font-medium mb-1 text-gray-800 dark:text-gray-200">Photo Credit</label>
        <input type="text" name="photoCredit" id="photoCredit"
          class="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 dark:text-white"
          value="<%= post.photoCredit %>" placeholder="e.g. John Doe / Reuters">
      </div>

      <!-- Buttons -->
      <div class="flex justify-between">
        <a href="/admin" class="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition">Cancel</a>
        <button type="submit"
          class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">üíæ Save Changes</button>
      </div>
    </form>
  </section>

  <!-- Quill Scripts -->
  <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

  <script>
    const quill = new Quill('#editor', {
      theme: 'snow',
      placeholder: 'Write something great...',
      modules: {
        toolbar: [
          [{ header: [1, 2, false] }],
          ['bold', 'italic', 'underline'],
          ['link', 'image'],
          [{ list: 'ordered' }, { list: 'bullet' }]
        ]
      }
    });

    const initialContent = `<%- (post.content || '').replace(/`/g, '\\`') %>`;
    quill.root.innerHTML = initialContent;

    document.querySelector('form').addEventListener('submit', function () {
      document.getElementById('content').value = quill.root.innerHTML;
    });
  </script>

  <%- include('partials/footer') %>
</body>
</html>
