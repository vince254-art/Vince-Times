<%- include('partials/head', { title }) %>
<%- include('partials/navbar') %>

<main class="admin-form-container">
  <h1>Create a New Post 📝</h1>

  <form action="/admin/new" method="POST" enctype="multipart/form-data" class="post-form">

    <div class="form-group">
      <label for="title">📰 Title</label>
      <input type="text" name="title" id="title" placeholder="Enter post title..." required autofocus>
    </div>

    <div class="form-group">
      <label for="category">📂 Category</label>
      <input type="text" name="category" id="category" placeholder="e.g. Politics, Sports..." required>
    </div>

    <div class="form-group">
      <label for="author">✍️ Author</label>
      <input type="text" id="author" name="author" placeholder="Author name" required>
    </div>

    <div class="form-group">
      <label for="videoUrl">🎬 YouTube Video URL (optional)</label>
      <input type="url" name="videoUrl" id="videoUrl" placeholder="https://www.youtube.com/embed/...">
    </div>

    <div class="form-group">
      <label for="media">🖼 Upload Image (Cloudinary)</label>
      <input type="file" name="media" id="media" accept="image/*" class="form-control">
    </div>

    <div class="form-group">
      <label for="photoCredit">📸 Photo Credit</label>
      <input 
        type="text" 
        name="photoCredit" 
        id="photoCredit" 
        placeholder="e.g. John Doe / Reuters"
      >
    </div>

    <div class="form-group">
      <label for="content">📝 Post Content (Markdown supported)</label>
      <textarea name="content" id="content" rows="10" required></textarea>
    </div>

    <button type="submit" class="submit-btn">✅ Publish Post</button>
  </form>

  <!-- 🔎 Live Markdown Preview -->
  <div class="preview-box">
    <h3>🔎 Live Preview</h3>
    <div id="livePreview" class="post-preview"></div>
  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.5/dist/purify.min.js"></script>
<script>
  const contentInput = document.getElementById('content');
  const preview = document.getElementById('livePreview');

  contentInput?.addEventListener('input', () => {
    const raw = contentInput.value;
    preview.innerHTML = DOMPurify.sanitize(marked.parse(raw));
  });
</script>

