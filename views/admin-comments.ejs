<%- include('partials/head', { title: 'Moderate Comments' }) %>
<%- include('partials/navbar') %>

<main class="container space-y-10" data-aos="fade-up">
  <h1 class="page-title">ðŸ’¬ Moderate Comments</h1>

  <% if (comments.length === 0) { %>
    <p class="text-gray-500">No comments to display.</p>
  <% } else { %>
    <section class="space-y-6">
      <% comments.forEach(comment => { %>
        <div class="card space-y-2" id="comment-<%= comment._id %>">
          <div class="text-sm text-gray-600">
            <strong><%= comment.author || 'Anonymous' %></strong>
            <% if (comment.flagged) { %>
              <span class="text-red-500 ml-2">ðŸš© Flagged</span>
            <% } %>
            &middot;
            <%= new Date(comment.date || comment.createdAt).toLocaleString() %>
          </div>

          <!-- Rendered Markdown -->
          <div class="comment-body text-gray-800 dark:text-gray-200">
            <%- comment.text ? comment.text : '<em>No comment text</em>' %>
          </div>

          <div class="flex gap-3 mt-2">
            <form action="/admin/comments/<%= comment._id %>/flag" method="POST">
              <button type="submit" class="button bg-yellow-500 text-white hover:bg-yellow-600">ðŸš© Flag</button>
            </form>
            <form action="/admin/comments/<%= comment._id %>/delete" method="POST" onsubmit="return confirm('Delete this comment?')">
              <button type="submit" class="button bg-red-600 text-white hover:bg-red-700">ðŸ—‘ Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </section>

    <!-- Pagination -->
    <div class="pagination mt-10 flex items-center justify-between">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>" class="pagination-btn">â¬… Prev</a>
      <% } else { %>
        <span></span>
      <% } %>
      <span class="current-page">Page <%= currentPage %> of <%= totalPages %></span>
      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>" class="pagination-btn">Next âž¡</a>
      <% } else { %>
        <span></span>
      <% } %>
    </div>
  <% } %>
</main>

<%- include('partials/footer') %>